{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./typings",
        "downlevelIteration": false,
        "importHelpers": true,
        "isolatedModules": false,
        "lib": ["ES5", "ES6", "es2020"],
        "module": "CommonJS",
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2022",
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"]
}